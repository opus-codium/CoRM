<div class="container-fluid" style="margin-top: 1em;">
  <div class="well">
    <div class="row-fluid">
      <div class="span9">
        <h2>Relation(s) de <%= @account.company %></h2>
      </div>
      <%= link_to '<i class="fa fa-plus-circle fa-3x action-icon"></i>'.html_safe, new_account_relation_path(:account_id_1 => @account.id) ,{:title => "Créer une relation", :class =>"pull-right"}%>
    </div>
  </div>
</div>


<div class="container-fluid">
  <% if Relation.by_account(@account).blank? %>
    <h4><%= t('errors.messages.no_relation') %></h4>
  <% else %>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th class="text-center"><center>Compte source</center></th>
          <th class="text-center"><center>Relation</center></th>
          <th class="text-center"><center>Compte cible</center></th>
          <th class="text-center"><center>Éditer</center></th>
        </tr>
      </thead>
      <tbody>
        <% @relations.each do |relation| %>
          <tr>
            <td class="text-center"><%= company_link relation.account1 %></td>
            <td class="text-center"><%= relation.name %></td>
            <td class="text-center"><%= company_link relation.account2 %></td>
            <td class="text-center"><%= link_to '<i class="fa fa-edit fa-2x action-icon"></i>'.html_safe, edit_relation_path(relation) ,{:title => "Modifier la relation"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br />
    <%= paginate @relations %>
  <% end %>
</div>
