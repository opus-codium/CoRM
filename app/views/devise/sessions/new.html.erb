<%= render 'shared/message' %>

<div id="bloc-login">
  <div id="logo">
    <% setting = if !Setting.first.blank?
      Setting.first
    else
      Setting.new
    end %>
    <img src="<%= setting.attach.url %>" alt="logo-login" />
  </div>

  <div id="login">

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name) ) do |f| %>
      <%= devise_error_messages! %>

      <div class="field" >
        <div align="center">
          <h3>CoRM</h3>
          <strong>Veuillez vous identifier</strong>
        </div>
        <br />
        <label align="right">Identifiant <%= f.text_field :login_name, { :required => 'required'} %> </label>
        <label align="right">Mot de passe <%= f.password_field :password, { :required => 'required'} %></label>
        <div class="pull-right">
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %> MÃ©moriser
          <% end %>
          <%= f.submit "Connexion", :class =>"btn btn-primary" %>
        </div>
        <div class="pull-left"><%= render "links" %></div>
      </div>
    <% end %>
  </div>
</div>
